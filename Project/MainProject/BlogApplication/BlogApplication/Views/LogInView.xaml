<UserControl x:Class="BlogApplication.Views.LogInView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlogApplication.Views"
             mc:Ignorable="d" 
             d:DesignHeight="585" d:DesignWidth="360" Background="Azure">
    <StackPanel>
        <Label Content="Email"/>
        <TextBox Text="{Binding Email}"/>
        <Label Content="Password"/>
        <TextBox/>
        <Button Grid.Row="2" Content="Enter" Height="70" Width="120"
                Command="{Binding EnterCommand}"/>

            
    </StackPanel>
</UserControl>
